<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vh_category_vtc_container"
    android:layout_width="@dimen/_39sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    android:background="@drawable/bg_viewholder_box"
    android:elevation="@dimen/_2sdp"
    android:orientation="horizontal"
    android:padding="@dimen/_4sdp">

    <ImageView
        android:id="@+id/vh_category_vtc_img"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:src="@drawable/svg_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/gray_bfbfbf"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/vh_category_vtc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="name"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="@+id/vh_category_vtc_img"
        app:layout_constraintStart_toStartOf="@+id/vh_category_vtc_img"
        app:layout_constraintTop_toBottomOf="@+id/vh_category_vtc_img" />

</androidx.constraintlayout.widget.ConstraintLayout>